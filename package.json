{
  "name": "greengate",
  "version": "1.0.0",
  "description": "WhatsApp Business automation and management GUI",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch backend --exec ts-node backend/server.ts",
    "build": "tsc",
    "start": "node dist/backend/server.js",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "install:all": "npm install && npm run frontend:install",
    "build:all": "npm run build && npm run frontend:build",
    "clean": "rm -rf dist frontend/dist node_modules frontend/node_modules greengate.db",
    "test:health": "curl http://localhost:3000/health"
  },
  "keywords": ["whatsapp", "business", "automation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.7",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
